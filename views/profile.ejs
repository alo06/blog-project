<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Blogspot</title>
</head>
<body>
      <div class="info">
            <h1>User Profile</h1>
            <h3>Username : <%= userName%></h3>
            <h3>Email : <%= mail%></h3>
      </div>
      <div class="blogs">
            <h2>My Blogs</h2>
            <% myBlogs.forEach(blog => { %>
                  <h3><%= blog.title%></h3>
                  <h4><%= blog.content%></h4>
            <% }) %>
      </div>
      <div class="input">
            <h2>Write New Blog</h2>
            <form method="post">
                  <div>
                        <input type="text" name="blogTitle" placeholder="Title" required>
                  </div>
                  <div>
                        <input type="text" name="blogContent" placeholder="Content" style="width: 500px;height: 50px;" required>
                  </div>
                  <div>
                        <input type="submit" value="Submit">
                  </div>
            </form>
            
      </div>
      <div class="links">
            <a href="/login">Log Out</a>
      </div>

</body>
</html>